  "title": "Cilium BGP",
  "uid": "cilium-bgp",
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Peers Up",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {"expr": "sum(cilium_bgp_control_plane_session_state==1)", "legendFormat": "up"}
      ]
    },
    {
      "type": "stat",
      "title": "Peers Down",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "targets": [
        {"expr": "sum(cilium_bgp_control_plane_session_state==0)", "legendFormat": "down"}
      ]
    },
    {
      "type": "table",
      "title": "Peer States",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "targets": [
        {"expr": "cilium_bgp_control_plane_session_state", "legendFormat": "{{vrouter}}→{{neighbor}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Routes Advertised",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum by (neighbor,afi,safi) (cilium_bgp_control_plane_advertised_routes)", "legendFormat": "{{neighbor}} {{afi}}/{{safi}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Session State Changes",
      "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
      "targets": [
        {"expr": "increase(cilium_bgp_control_plane_session_state_changes_total[1h])", "legendFormat": "{{vrouter}}"}
      ]
    }
,
    {
      "type": "timeseries",
      "title": "Advertised Routes per Neighbor",
      "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum by (vrouter,neighbor) (cilium_bgp_control_plane_advertised_routes)", "legendFormat": "{{vrouter}} → {{neighbor}}"}
      ]
    },
    {
      "type": "heatmap",
      "title": "BGP Session Flaps (5m)",
      "gridPos": {"x": 0, "y": 36, "w": 12, "h": 8},
      "options": {"legend": {"show": true}},
      "targets": [
        {"expr": "sum by (vrouter,neighbor) (increase(cilium_bgp_control_plane_session_state_changes_total[5m]))", "legendFormat": "{{vrouter}} → {{neighbor}}"}
      ]
    },
    {
      "type": "table",
      "title": "LoadBalancer VIPs (Services)",
      "gridPos": {"x": 0, "y": 44, "w": 12, "h": 8},
      "targets": [
        {"expr": "kube_service_status_load_balancer_ingress", "legendFormat": "{{namespace}}/{{service}} → {{ip}}"}
      ]
    }

  ]
}

