machine:
  type: worker
---
apiVersion: v1alpha1
kind: HostnameConfig
auto: "off"
hostname: talos5.vaderrp.com
---
apiVersion: v1alpha1
kind: LinkAliasConfig
name: ethSel0
selector:
  match: glob("bc:24:11:*", mac(link.hardware_addr))
---
apiVersion: v1alpha1
kind: LinkConfig
name: ethSel0
mtu: 1500
addresses:
  - address: 192.168.7.25/24
routes:
  - gateway: 192.168.7.1
  - destination: 192.168.0.0/16
    gateway: 192.168.7.1
---
apiVersion: v1alpha1
kind: UserVolumeConfig
name: local-storage
provisioning:
  diskSelector:
    match: '!system_disk'
  minSize: 32GB